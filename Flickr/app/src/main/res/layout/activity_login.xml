<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fingerprint_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fingerPrintImageView"
            android:layout_width="@dimen/image_finger_print_height_width"
            android:layout_height="@dimen/image_finger_print_height_width"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_finger_print" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:text="@string/login_type_hint_text"
            android:textSize="@dimen/bold_text_size"
            app:layout_constraintTop_toBottomOf="@+id/fingerPrintImageView" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>